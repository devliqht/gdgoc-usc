---
export interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
---

<a
  href={href}
  class="block py-2 text-gray-700 dark:text-gray-300 hover:text-gdgoc-primary-blue dark:hover:text-gdgoc-primary-blue transition-colors duration-200 font-medium rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800"
>
  {text}
</a> 