---
import { Image } from "astro:assets";
import { ChevronDown, Code, Users } from "lucide-react";
import Squares from '@/components/react-bits/FlowingGrid';
import AnimatedHeroText from '@/components/animated/AnimatedHeroText';
---

<section 
  id="hero" 
  class="relative min-h-screen w-full flex items-center justify-center overflow-hidden"
>
  <!-- Animated background -->
  <div class="absolute inset-0 bg-cover bg-[position:left_center] sm:bg-[length:120%] sm:bg-[position:left_center] md:bg-cover md:bg-center bg-no-repeat animate-bg-reveal" style="background-image: url('/gdgoc_bg_1.svg');"></div>
  <!-- <div class="absolute inset-0 -z-25">
    <Squares 
      direction="diagonal" 
      speed={0.5} 
      borderColor="rgba(66, 133, 244, 0.3)" 
      squareSize={60}
      hoverFillColor="rgba(66, 133, 244, 0.2)"
      client:load
    />
  </div> -->

  <!-- commented out for now
  <div class="absolute inset-0 z-1 bg-gradient-to-br from-white/20 via-white/5 to-white/10 dark:from-black/20 dark:via-black/5 dark:to-black/10 backdrop-blur-[1px]"></div> -->

  <!-- <div class="absolute pointer-events-none inset-0 -z-20 bg-gradient-to-br from-white via-white/80 to-white/80 dark:from-gray-900/80 dark:via-gdgoc-primary-blue/5 dark:to-gdgoc-primary-green/5"></div> -->

  <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center justify-center max-w-4xl mx-auto">
      <div class="flex flex-col justify-center text-center items-center w-full">
        <div class="space-y-6">
          <AnimatedHeroText 
            className="text-center text-5xl md:text-7xl lg:text-8xl font-medium text-black dark:text-white leading-[0.99] tracking-[-1.44px] lg:tracking-[-3.72px] text-balance mb-6"
            client:load
          >
            Google Developer Groups
            <span class="block text-xl lg:text-2xl font-normal text-gray-600 dark:text-gray-300 mt-1 tracking-normal">
              on Campus
            </span>
          </AnimatedHeroText>
          
          <AnimatedHeroText 
            className="inline-flex items-center gap-2 px-6 py-3 bg-none border-gdgoc-primary-green border-2 bg-gradient-to-r from-gdgoc-primary-green/10 to-gdgoc-secondary-green/10 backdrop-blur-sm rounded-full mt-6"
            delay={0.2}
            client:load
          >
            <Image
              src="/usc_logo.svg"
              alt="USC Logo"
              width={64}
              height={64}
              class="w-8 h-8 md:lg:w-10 md:lg:h-10 drop-shadow-2xl transform group-hover:rotate-3 transition-all duration-500"
            />
            <h3 class="text-md lg:text-lg font-semibold text-gdgoc-primary-green tracking-normal">
              University of San Carlos
            </h3>
          </AnimatedHeroText>
          
          <AnimatedHeroText 
            className="text-base lg:text-lg text-gray-600 dark:text-gray-300 max-w-lg mx-auto leading-relaxed mt-6"
            delay={0.4}
            client:load
          >
            Join our community of passionate developers, innovators, and tech enthusiasts building the future together.
          </AnimatedHeroText>
          
          <AnimatedHeroText 
            className="flex justify-center mt-6"
            delay={0.6}
            client:load
          >
            <button 
              onclick="scrollToNextSection()"
              class="group relative inline-flex items-center gap-3 px-8 py-4 md:px-10 md:py-5 border-1 border-gdgoc-primary-blue bg-gdgoc-primary-blue text-white hover:bg-transparent hover:text-gdgoc-secondary-blue dark:hover:text-gdgoc-secondary-blue hover:border-gdgoc-primary-blue font-semibold rounded-full transition-all duration-200 transform hover:cursor-pointer overflow-hidden"
              aria-label="Learn more about GDGoC USC"
            >
              
              <span class="relative z-10">Learn More</span>
              <ChevronDown 
                className="relative z-10 w-5 h-5 transition-transform duration-300 group-hover:-rotate-90" 
                client:load 
              />
            </button>
          </AnimatedHeroText>
        </div>
      </div>
      
    </div>
  </div>
</section>

<script>
  function scrollToNextSection() {
    const aboutSection = document.getElementById('about');
    if (aboutSection) {
      aboutSection.scrollIntoView({ 
        behavior: 'smooth',
        block: 'start'
      });
    }
  }

  (window as any).scrollToNextSection = scrollToNextSection;
</script>