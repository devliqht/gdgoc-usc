---
import { Image } from 'astro:assets';
import { brands } from '../config/brands.data';
---

<section
  id='partners'
  class='relative w-full overflow-hidden min-h-screen flex flex-col items-center py-12 bg-gradient-to-br from-blue-50 via-white to-green-50 dark:from-neutral-900 dark:via-neutral-800 dark:to-neutral-900'
>
  <div class='absolute inset-0 opacity-20 dark:opacity-10'>
    <div
      class='absolute inset-0'
      style='background-image: radial-gradient(circle at 2px 2px, rgba(22, 22, 24, 0.3) 1px, transparent 0); background-size: 40px 40px;'
    >
    </div>
  </div>

  <div class='relative z-10 container px-4 sm:px-6 lg:px-8 w-full max-w-7xl'>
    <div class='text-center my-12'>
      <div class='flex flex-col gap-4'>
        <h1
          class='text-4xl md:text-6xl font-bold text-black dark:text-white mb-4 tracking-tighter'
        >
          Our Partners & Sponsors
        </h1>
        <p
          class='text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto leading-relaxed'
        >
          We're grateful for the organizations that support our mission to build
          a thriving developer community at USC.
        </p>
      </div>
    </div>
  </div>

  <div class='relative z-10 container px-4 sm:px-6 lg:px-8 w-full max-w-7xl'>
    <div
      class='grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-8 auto-rows-auto'
    >
      <!-- {
        brands.map(brand => (
          <div class='flex items-center justify-center'>
            <Image
              src={brand.logo}
              width={brand.width || 64}
              height={brand.height || 64}
              class='w-full h-auto max-w-64 object-contain brightness-0 dark:brightness-0 dark:invert drop-shadow-lg transform group-hover:scale-105 transition-all duration-500'
              alt={brand.alt}
            />
          </div>
        ))
      } -->
    </div>
  </div>
</section>
